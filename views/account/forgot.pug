extends ../layout

block content
  .col-sm-8.offset-sm-2
    form(method='POST')
      if !resend
        legend Forgot Password
        hr
        input(type='hidden', name='_csrf', value=_csrf)
        .input-group.mb-3
          p Enter your email address below and we will send you password reset instructions.
          label.col-form-label.font-weight-bold(for='email') Email
          input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus, required)
          hr

        .input-group.mb-3
          button.btn.btn-primary(type='submit')
            i.fa.fa-key
            | Reset Password
      else 
          legend Ponowna weryfikacja
          hr
          input(type='hidden', name='_csrf', value=_csrf)
          .input-group.mb-3
            p Enter your email address below and we will send you account verify instructions.
            label.col-form-label.font-weight-bold(for='email') Email
            input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus, required)
            hr

          .input-group.mb-3
            button.btn.btn-primary(type='submit')
              i.fa.fa-key
              | Resend Verify Email
